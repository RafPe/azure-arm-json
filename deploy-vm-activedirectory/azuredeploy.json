{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "StorageAccName": {
      "type": "string",
      "metadata": {
        "description": "The name of the storage account to Create"
      },
      "defaultValue": "adVNET"
    },
    "StorageAccLocation": {
      "type": "string",
      "metadata": {
        "description": "The location for storage account"
      },
      "defaultValue": "West Europe"
    },
    "storageAccountType": {
      "type": "string",
      "metadata": {
        "description": "The type of storage account to create"
      },
      "defaultValue": "Standard_LRS"
    },
    "virtualNetworkLocation": {
      "type": "string",
      "metadata": {
        "description": "The name of the Virtual Network to Create"
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "metadata": {
        "description": "The name of the Virtual Network to Create"
      },
      "defaultValue": "adVNET"
    },
    "virtualNetworkAddressRange": {
      "type": "string",
      "metadata": {
        "description": "The address range of the new VNET in CIDR format"
      },
      "defaultValue": "10.0.0.0/16"
    },
    "subnetName": {
      "type": "string",
      "metadata": {
        "description": "The name of the subnet created in the new VNET"
      },
      "defaultValue": "subnetRange"
    },
    "subnetRange": {
      "type": "string",
      "metadata": {
        "description": "The address range of the subnet created in the new VNET"
      },
      "defaultValue": "10.0.0.0/24"
    },
    "MasterUrl": {
      "type": "string",
      "metadata": {
        "description": "The location of resources such as templates and DSC modules that the script is dependent"
      },
      "defaultValue": "https://raw.githubusercontent.com/RafPe/azure-arm-json/master"
    }


  },
  "variables": {
    "vnetTemplateUri": "[concat(parameters('MasterUrl'),'/deploy-vnet/azuredeploy.json')]",
    "storageAccountTemplateUri": "[concat(parameters('MasterUrl'),'/deploy-storageAcc/azuredeploy.json')]"
  },
  "resources": [
      {
        "name": "StorageAcc",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2015-01-01",
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[variables('storageAccountTemplateUri')]",
            "contentVersion": "1.0.0.0"
          },
          "parameters": {
            "StorageAccName": {
              "value": "[parameters('StorageAccName')]"
            },
            "StorageAccLocation": {
              "value": "[parameters('StorageAccLocation')]"
            },
            "storageAccountType": {
              "value": "[parameters('storageAccountType')]"
            }
          }
        }
      },
    {
      "name": "VNet",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('vnetTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualNetworkLocation": {
            "value": "[parameters('virtualNetworkLocation')]"
          },
          "virtualNetworkName": {
            "value": "[parameters('virtualNetworkName')]"
          },
          "virtualNetworkAddressRange": {
            "value": "[parameters('virtualNetworkAddressRange')]"
          },
          "subnetName": {
            "value": "[parameters('subnetName')]"
          },
          "subnetRange": {
            "value": "[parameters('subnetRange')]"
          }
        }
      }
    }
  ]
  }