{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": 
	{
        "StorageAccName": { "type": "string", "metadata": { "description": "new storage account which we will create to host our VMs" } },
        "Location": { "type": "string", "defaultValue": "West Europe", "metadata": { "description": "default location used for this deployment" } }
    },
    "variables": {
        "storageAccountType": "Standard_LRS"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('StorageAccName')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('Location')]",
            "tags": {
                "displayName": "StorageAccount"
            },
            "properties": {
                "accountType": "[variables('storageAccountType')]"
            }
        }
    ],
    "outputs": {
    }
}
